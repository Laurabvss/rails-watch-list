<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
      <%= image_tag bookmark.movie.poster_url %>
      <p><%= bookmark.comment %></p>
      <%= button_to "Destroy this movie", bookmark_path(bookmark), method: :delete, class: 'btn btn-secondary' %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new bookmark", new_list_bookmark_path(@list)%>
<%= link_to "Back to list", lists_path%>
